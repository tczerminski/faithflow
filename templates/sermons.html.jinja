        <nav class="hidden md:flex space-x-12 text-xl font-bold tracking-wide font-sans">
          <ul class="flex gap-8 justify-center text-lg font-semibold">
              <li>
              <a
                href="/"
                class="relative group pb-1 text-gray-800 hover:text-blue-600 transition-colors duration-300 cursor-pointer"
              >
                Wydarzenia
                <span
                  class="absolute bottom-0 left-0 h-0.5 bg-blue-600 transition-all duration-300 w-0 group-hover:w-full"
                ></span>
              </a>
            </li>
            <li>
              <a
                href="/sermons"
                class="relative group pb-1 text-gray-800 hover:text-blue-600 transition-colors duration-300 cursor-pointer"

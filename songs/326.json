{
    "id": 326,
    "title": "NIECH CI BŁOGOSŁAWI PAN",
    "verses": [
        {
            "lines": [
                "NIECH CI BŁOGOSŁAWI PAN",
                "I NIECHAJ CIĘ STRZEŻE,",
                "NIECH ROZJAŚNI PAN",
                "OBLICZE SWE NAD TOBĄ,",
                "MIŁOŚCIW BĘDZIE CI.",
                "NIECH OBRÓCI PAN",
                "TWARZ SWĄ KU TOBIE",
                "I POKÓJ CI DA."
            ]
        },
        {
            "lines": [
                "JEŚLI PILNIE SŁUCHAĆ BĘDZIESZ",
                "GŁOSU PANA TWEGO,",
                "GDY MIŁOWAĆ BĘDZIESZ GO",
                "PONAD WSZYSTKO,",
                "WTEDY JEGO OBLICZE",
                "PÓJDZIE PRZED TOBĄ,",
                "PAN BŁOGOSŁAWIĆ BĘDZIE CI."
            ]
        },
        {
            "lines": [
                "JEŚLI BĘDZIESZ STRZEC PRZYKAZAŃ",
                "CAŁYM SERCEM Z CAŁEJ MOCY,",
                "NIE POZWOLISZ NOGOM SWYM",
                "ZEJŚĆ Z JEGO DROGI,",
                "WTEDY JEGO OBLICZE",
                "PÓJDZIE PRZED TOBĄ,",
                "PAN BŁOGOSŁAWIĆ BĘDZIE CI."
            ]
        }
    ]
}
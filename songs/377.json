{
    "id": 377,
    "title": "ON JEST OJCEM SIEROT",
    "verses": [
        {
            "lines": [
                "ON JEST OJCEM SIEROT",
                "OPIEKUNEM WDÓW",
                "JEST DOBRY BÓG",
                "DOM SWÓJ DAJE",
                "WSZYSTKIM OPUSZCZONYM"
            ]
        },
        {
            "lines": [
                "ZSYŁA DESZCZ OBFITY",
                "NA TO CO SPRAGNIONE",
                "I WYCZERPANE JEST",
                "DOBRY JEST DLA BIEDNYCH",
                "W ŁASCE SWEJ NASZ BÓG",
                "DO NAS UNIŻYŁ SIĘ"
            ]
        },
        {
            "lines": [
                "NIEPOJĘTA ŁASKA JEGO",
                "WCIĄŻ DOSIĘGA NAS",
                "GDY PODNOSI,",
                "PRZEMIENIA SERCA I UWALNIA NAS",
                "PRAWDA TWA"
            ]
        },
        {
            "lines": [
                "ON ZNA KAŻDE SERCE",
                "NIE ODWRACA SIĘ, GDY WZYWAMY GO",
                "KOCHA NAS POMIMO",
                "TEGO, ŻE TAK NIEWIELE MOŻEMY MU DAĆ"
            ]
        },
        {
            "lines": [
                "ON ZNA MOJE SERCE",
                "NIE ODWRACA SIĘ GDY WZYWAM GO",
                "KOCHA MNIE POMIMO",
                "TEGO, ŻE TAK NIEWIELE MOGĘ MU DAĆ"
            ]
        }
    ]
}
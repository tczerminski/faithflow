    "title": "USŁYSZ, PANIE, MEGO SERCA PIEŚŃ",
    "verses": [
        {
            "lines": [
                "USŁYSZ PANIE MEGO SERCA PIEŚŃ",
                "CHCĘ TOBIE ŚPIEWAĆ, GDY ROZMYŚLAM JAK",
                "KOCHAM CIEBIE, JEZU, KOCHAM CIEBIE"
            ]
        },
        {
            "lines": [
                "DUSZA MOJA KOCHA CIĘ",
                "TWEJ OBECNOŚCI, W CIENIU SKRZYDEŁ TWYCH",
                "KOCHAM CIEBIE, JEZU, KOCHAM CIEBIE"
            ]
        },
        {
            "lines": [
                "DUSZA MOJA TĘSKNI WCIĄŻ",
                "PRAGNIE WIELBIĆ CIĘ NA ZAWSZE",
                "W MAJESTACIE I MOCY TWEJ"
            ]
        },
        {
            "lines": [
                "WZNOSZĘ GŁOS, RĘCE SWE",
                "WZNOSZĘ RĘCE W STRONĘ NIEBA",
                "JESTEŚ SŁOŃCEM I TARCZĄ MĄ"
            ]
        }
    ]
}
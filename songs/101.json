{
    "id": 101,
    "title": "DROGĄ VIA DOLOROSA",
    "verses": [
        {
            "lines": [
                "DROGĄ VIA DOLOROSA, W JERUZALEM,",
                "W TAMTEN DZIEŃ,",
                "UMĘCZONY, ZBITY CZŁOWIEK WOLNO SZEDŁ.",
                "TŁUM SIĘ CISNĄŁ Z WSZYSTKICH STRON,",
                "POWTARZAJĄC SŁOWA TE: UKRZYŻUJ GO!"
            ]
        },
        {
            "lines": [
                "KOLCE WIEŃCA CIERNIOWEGO",
                "MOCNO W SKRONIE WBIŁY SIĘ,",
                "Z PLECÓW CIĘTYCH BICZOWANIEM PŁYNĘŁA KREW,",
                "Z TRUDEM STAWIAŁ KAŻDY KROK,",
                "GDYŻ OHYDA LUDZKICH GRZECHÓW OBCIĄŻAŁA GO."
            ]
        },
        {
            "lines": [
                "DROGĄ VIA DOLOROSA,",
                "ZWANĄ DROGĄ CIERPIEŃ, MĄK,",
                "JAK BARANEK MESJASZ SZEDŁ.",
                "DOBROWOLNIE TĘDY SZEDŁ,",
                "BO UMIŁOWAŁ CIEBIE I MNIE.",
                "DROGĄ VIA DOLOROSA, NA ŚMIERĆ, NA GOLGOTĘ."
            ]
        },
        {
            "lines": [
                "DROGĄ VIA DOLOROSA, W JERUSALEM,",
                "W TAMTEN DZIEŃ,",
                "CZŁOWIEK NA ŚMIERĆ OSĄDZONY WOLNO SZEDŁ.",
                "W TŁUMIE SŁYCHAĆ DRWINY, ŚMIECH,",
                "JESZCZE CIĄGLE NIE DOŚĆ IM ZNIEWAGI TEJ"
            ]
        },
        {
            "lines": [
                "TA KREW, KTÓRA MA MOC BRUD GRZECHU Z DUSZY ZMYĆ,",
                "ZNACZYŁA NA DRODZE ŚLAD W SAMYM SERCU"
            ]
        }
    ]
}
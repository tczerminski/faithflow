{
    "id": 238,
    "title": "KAŻDEGO DNIA UWIELBIAM CIEBIE",
    "verses": [
        {
            "lines": [
                "KAŻDEGO DNIA UWIELBIAM CIEBIE",
                "DO NIEBA WZNOSZĄC SWOJE RĘCE",
                "MIŁOŚCIĄ TWOJĄ WYPEŁNIONY",
                "WYZNAJĘ:",
                "JESTEŚ MOIM SZCZĘŚCIEM"
            ]
        },
        {
            "lines": [
                "STOJĄC PRZED TOBĄ DZISIAJ WOŁAM",
                "OFIAROWUJĄC DZIĘKCZYNIENIE",
                "PANIE TY JESTEŚ MOJĄ TWIERDZĄ",
                "JEZU TY JESTEŚ MYM ZBAWIENIEM"
            ]
        },
        {
            "lines": [
                "ALLELUJA, ALLELUJA",
                "ALLELUJA, ALLELUJA"
            ]
        },
        {
            "lines": [
                "DZISIAJ, GDY STOJĘ",
                "TU PRZED TOBĄ",
                "WIEDZĄC, JAK BARDZO",
                "MNIE MIŁUJESZ",
                "MIMO MYCH BŁĘDÓW I UPADKÓW",
                "TY SIĘ NADE MNĄ WCIĄŻ LITUJESZ"
            ]
        },
        {
            "lines": [
                "TERAZ MĄ MIŁOŚĆ CHCĘ CI WYZNAĆ",
                "I Z GŁĘBI SERCA CI SIĘ ZWIERZYĆ",
                "W TOBIE CHCĘ CHRONIĆ MOJE ŻYCIE",
                "DO CIEBIE CAŁKIEM CHCĘ NALEŻEĆ"
            ]
        }
    ]
}
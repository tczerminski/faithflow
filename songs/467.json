{
    "id": 467,
    "title": "ROZRADUJ SIĘ, CHRYSTUS W SERCU",
    "verses": [
        {
            "lines": [
                "ROZRADUJ SIĘ!",
                "CHRYSTUS W SERCU",
                "NADZIEJĄ WIELKIEJ CHWAŁY JEST",
                "ON ŻYJE! TAK!",
                "ON ŻYJE W TOBIE",
                "POTĘŻNA ARMIO BOŻA WSTAŃ!",
                "O WSTAŃ! O WSTAŃ!"
            ]
        },
        {
            "lines": [
                "NAJWYŻSZY CZAS, BY JUŻ",
                "POSTAWIĆ STOPY SWE",
                "NA ZIEMI TEJ,",
                "KTÓRĄ DAJE NAM BÓG",
                "SAM CHRYSTUS WIEDZIE NAS",
                "CHCE ABY WIEDZIAŁ CAŁY ŚWIAT",
                "ŻE ON NAJWYŻSZYM KRÓLEM JEST!"
            ]
        },
        {
            "lines": [
                "BÓG WCIĄŻ PRZEKSZTAŁCA NAS,",
                "BY SWÓJ OSIĄGNĄĆ CEL",
                "BY JEGO MOC MOGŁA DZIAŁAĆ POŚRÓD NAS",
                "CO NIEMOŻLIWE DZIŚ",
                "GDY WIERZYSZ MOŻE FAKTEM BYĆ",
                "WIELBIMY ZA TO KRÓLA CHWAŁ"
            ]
        },
        {
            "lines": [
                "WSPANIAŁY, CENNY SKARB",
                "W SWYM WNĘTRZU KAŻDY MA",
                "KTO Z CAŁYCH SIŁ",
                "SWEMU PANU SŁUŻYĆ CHCE",
                "W SŁABOŚCI NASZEJ PAN",
                "OBJAWIA SWOJĄ WIELKĄ MOC",
                "ŚPIEWAJMY JEMU PIEŚNI CHWAŁ"
            ]
        }
    ]
}
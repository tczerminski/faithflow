{
    "id": 17,
    "title": "BĘDZIEMY WIECZNIE ŻYLI Z NIM",
    "verses": [
        {
            "lines": [
                "BĘDZIEMY WIECZNIE ŻYLI Z NIM",
                "DZIŚ JEZUS O TYM MÓWI NAM.",
                "BĘDZIEMY WIECZNIE ŻYLI Z NIM,",
                "TAM SPOTKAM PANA TWARZĄ W TWARZ."
            ]
        },
        {
            "lines": [
                "NIKODEM SZUKAŁ ZBAWIENIA",
                "A JEZUS TAK JEMU RZEKŁ:",
                "\"MUSISZ NARODZIĆ SIE NA NOWO,",
                "MUSISZ NARODZIĆ SIĘ NA NOWO",
                "A WTEDY BĘDZIESZ, BĘDZIESZ WIECZNIE ŻYŁ\""
            ]
        },
        {
            "lines": [
                "PYTALI ŻYDZI JEZUSA, CO ROBIĆ BY WIECZNIE ŻYĆ?",
                "\"SŁUCHAJCIE SŁOWA I WIERZCIE WE MNIE,",
                "SĄD WAS OMINIE JAK OGIEŃ PRZEJDZIE,",
                "LECZ WAS NIE STRAWI –",
                "BĘDZIECIE WIECZNIE WIECZNIE ŻYĆ\"!"
            ]
        },
        {
            "lines": [
                "\"W KRÓLESTWIE MOIM U OJCA,",
                "W OBRĘBIE MURÓW MYCH,",
                "PRZYZNAM CI MIEJSCE,",
                "DAM NOWE IMIĘ, ZAMIESZKASZ ZE MNĄ,",
                "BO WIERZYSZ WE MNIE, JUŻ BĘDZIESZ ZE MNĄ,",
                "BĘDZIESZ WIECZNIE ŻYŁ!"
            ]
        }
    ]
}
        {
            "lines": [
                "ZAKODOWANE DANE",
                "SĄ WSZĘDZIE WOKÓŁ NAS",
                "LECZ NIE SĄ TAJEMNICĄ,",
                "GDY WSZYSTKIE KODY ZNASZ.",
                "SĄ ZNAKI, LICZBY, HASŁA,",
                "JĘZYK ŚWIATEŁ TEŻ",
                "CZERWONE – STÓJ OZNACZA,",
                "ZIELONE – WOŁA: JEDŹ!"
            ]
        },
        {
            "lines": [
                "ZAKODOWANA KSIĘGA,",
                "ZAKODOWANE MYŚLI,",
                "ZAKODOWANA PRAWDA,",
                "SZUKASZ SENSU, W GŁOWIE MŁYN,",
                "JEST ODPOWIEDŹ W SŁOWIE TYM."
            ]
        },
        {
            "lines": [
                "TA KSIĘGA BIBLIĄ ZWANA,",
                "CHOĆ TROCHĘ KODOWANA,",
                "TEŻ NIE JEST TAJEMNICZA,",
                "BO WSZYSTKIE KODY ZNASZ.",
                "PAN JEZUS TO SYN BOGA,",
                "W NIM ZBAWIENIE JEST.",
                "ZŁAMIESZ KOD WIECZNEGO ŻYCIA,",
                "TYLKO MOCNO WIERZ."
            ]
        },
        {
            "lines": [
                "(: PASTERZ, OWCE, ŻYWA WODA,",
                "ZIARNO, ŚWIATŁOŚĆ, ZIEMI SÓL,",
                "WIELKA RYBA, WĄSKA DROGA,",
                "CIASNA BRAMA, SŁUGA KRÓL. :)",
                "JEŚLI NIE WIESZ, CO TO JEST",
                "CZYTAJ BIBLIĘ, DOWIESZ SIĘ."
            ]
        }
    ]

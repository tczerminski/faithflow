{
    "id": 428,
    "title": "PONAD ZŁO, PONAD GRZECH",
    "verses": [
        {
            "lines": [
                "PONAD ZŁO, PONAD GRZECH",
                "PONAD CIEMNOŚĆ, PONAD ŚMIERĆ",
                "BOŻA ŁASKA, BOŻA MIŁOŚĆ",
                "WZNOSI SIĘ"
            ]
        },
        {
            "lines": [
                "PONAD ROZPACZ, BÓLU KRZYK",
                "NAD NIEBIOSA POTĘŻNIE BRZMI",
                "WYKONAŁO SIĘ – ZWYCIĘŻYŁ BOŻY SYN!"
            ]
        },
        {
            "lines": [
                "IDŹ NA GOLGOTĘ POPATRZ WZWYŻ",
                "UJRZYSZ TRIUMFUJĄCY KRZYŻ",
                "I TAKI JAKIM JESTEŚ PRZED PANEM STAŃ"
            ]
        },
        {
            "lines": [
                "A POTEM POZWÓL BY WSZELKI GRZECH",
                "ZMYŁA JEGO ŚWIĘTA KREW",
                "I WSZELKI CIĘŻAR SWÓJ POZOSTAW TAM"
            ]
        }
    ]
}
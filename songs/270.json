{
    "id": 270,
    "title": "MAŁY STER",
    "verses": [
        {
            "lines": [
                "JAK MAŁY STER KIERUJE STATKIEM,",
                "NIEWIELKA ISKRA ZAPALA LAS,",
                "TAK DROBNY JĘZYK CHCE WŁADAĆ TOBĄ.",
                "NIE POZWÓL NA TO, OPANUJ GO!",
                "BŁOGOSŁAWIĆ CZY PRZEKLINAĆ CHCESZ?"
            ]
        },
        {
            "lines": [
                "CZASEM DRYFUJESZ NA MORZU SŁÓW,",
                "NIE WIESZ DOKĄD PROWADZĄ CIĘ",
                "ŁATWO ZAPOMNIEĆ, ŻE MOWA TWA",
                "MOŻE ZADAĆ CIOS.",
                "KTO UJARZMI JĘZYKA MOC ŁATWIEJ BĘDZIE MU",
                "NAD SWOIM CIAŁEM PANOWAĆ CO DZIEŃ",
                "I UTRZYMAĆ KURS"
            ]
        },
        {
            "lines": [
                "NIC NIE KOI JAK ŁAGODNY SZEPT",
                "KILKA SŁÓW CO UŚMIERZĄ GNIEW,",
                "JAK PO SZTORMIE SPOKOJNA TOŃ, NOWY SŁOŃCA WSCHÓD.",
                "POPROŚ BOGA, A WZMOCNI CIĘ, NADA ŻYCIU CEL,",
                "BYŚ NAD SWOIM CIAŁEM PANOWAŁ CO DZIEŃ",
                "I NIE POTKNĄŁ SIĘ."
            ]
        }
    ]
}
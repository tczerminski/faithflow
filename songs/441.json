{
    "id": 441,
    "title": "PRAWDA JEDYNA",
    "verses": [
        {
            "lines": [
                "PRAWDA JEDYNA",
                "SŁOWA JEZUSA Z NAZARETU,",
                "ŻE SWEGO SYNA POSŁAŁ",
                "Z NIEBIOS BÓG NA ŚWIAT,",
                "ABY NIEWINNIE CIERPIĄC ZMARŁ",
                "ZA NASZE GRZECHY",
                "I W POHAŃBIENIU PRZYJĄŁ",
                "WINY WSZYSTKICH NAS"
            ]
        },
        {
            "lines": [
                "DZIĘKI CI, BOŻE MÓJ,",
                "ZA TEN KRZYŻ,",
                "KTÓRY JEZUS CIERPIAŁ ZA MNIE,",
                "JEZUS CIERPIAŁ ZA MNIE"
            ]
        },
        {
            "lines": [
                "UWIERZ W JEZUSA,",
                "PRZECIEŻ ON ZA CIEBIE UMARŁ",
                "I Z MIŁOŚCI DO NAS",
                "PRZYSZEDŁ Z NIEBA NA TEN ŚWIAT",
                "BŁOGOSŁAWIONY TEN, KTO WIERZY",
                "CHOĆ NIE WIDZIAŁ",
                "ZAUFAJ DZIŚ BOGU",
                "A NA WIEKI BĘDZIESZ ŻYŁ"
            ]
        }
    ]
}
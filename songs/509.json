{
    "id": 509,
    "title": "ŚWIATŁO TWOJEJ MIŁOŚCI, PANIE",
    "verses": [
        {
            "lines": [
                "ŚWIATŁO TWOJEJ MIŁOŚCI PANIE",
                "NOCY ŚWIATA ROZPRASZA MROKI",
                "JEZU, KTÓRYŚ JEST",
                "ŚWIATA ŚWIATŁOŚCIĄ",
                "OŚWIEĆ NAS SWOJĄ PRAWDĄ, MIŁOŚCIĄ",
                "OŚWIEĆ MNIE, OŚWIEĆ MNIE!"
            ]
        },
        {
            "lines": [
                "NIECH LŚNI TWÓJ BLASK",
                "CHWAŁĘ OJCA OBJAWIAJ JEZU",
                "ZSTĄP DUCHU, ZSTĄP",
                "ROZPAL SERCA W NAS",
                "WODO ŻYCIA PŁYŃ",
                "MIŁOSIERDZIE I ŁASKĘ ROZLEJ",
                "POŚLIJ SŁOWO SWE",
                "PANIE NIECH ŚWIECI NAM!"
            ]
        },
        {
            "lines": [
                "PRZED TWYM ŚWIĘTYM OBLICZEM STOJĘ",
                "Z MROKU W JASNOŚĆ PRZECHODZĘ TWOJĄ",
                "PRZEZ TWĄ KREW MAMY PRZYSTĘP DO CIEBIE",
                "SPRAWDŹ MNIE, POKAŻ CO WE MNIE JEST CIEMNE",
                "OŚWIEĆ MNIE, OŚWIEĆ MNIE!"
            ]
        },
        {
            "lines": [
                "GDY NA CIEBIE PATRZYMY PANIE",
                "TY PRZEMIENIASZ NAS NIEUSTANNIE",
                "Z CHWAŁY W CHWAŁĘ",
                "PROWADZISZ NAS STALE",
                "BYŚMY ŻYCIEM GŁOSILI TWĄ CHWAŁĘ",
                "OŚWIEĆ MNIE, OŚWIEĆ MNIE!"
            ]
        }
    ]
}
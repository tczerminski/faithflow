{
    "id": 598,
    "title": "W MYŚLACH MARZEŃ",
    "verses": [
        {
            "lines": [
                "W MYŚLACH MARZEŃ, SNÓW NATŁOKU,",
                "KTÓRE ZASIAŁ W TOBIE BÓG.",
                "WCIĄŻ TAK TRUDNO CI UWIERZYĆ",
                "I WYBRAĆ TĘ JEDYNĄ Z DRÓG.",
                "LECZ BLISKO TAK, JAK ZAWSZE,",
                "PRZY TOBIE WCIĄŻ CHCEMY STAĆ.",
                "MIŁOŚĆ NAM PODWOI SIŁY,",
                "TA MIŁOŚĆ, KTÓRA ZAWSZE TRWA."
            ]
        },
        {
            "lines": [
                "PRZYJACIÓŁMI JUŻ NA ZAWSZE",
                "SĄ CI KTÓRYCH PANEM BÓG",
                "SLOWO \"NIE\" NIE ZABRZMI NIGDY",
                "GDY PRZYJACIEL JEST U DRZWI",
                "JAKŻE TRUDNO ZGODZIĆ SIĘ",
                "BYŚ DALEKO ODSZEDŁ SAM",
                "LECZ OTWARTE BĘDĄ DRZWI,",
                "GDY ZJAWISZ SIĘ"
            ]
        },
        {
            "lines": [
                "Z WIARĄ W SERCU I Z MIŁOŚCIĄ,",
                "KTÓRĄ BÓG ZOSTAWI NAM",
                "WCIĄŻ W MODLITWACH TRWAĆ BĘDZIEMY",
                "BY W TWYM ŻYCIU WYGRAŁ PAN",
                "I BLISKO TAK JAK ZAWSZE",
                "PRZY TOBIE WCIĄŻ CHCEMY STAĆ.",
                "MIŁOŚĆ NAM PODWOI SIŁY,",
                "TA MIŁOŚĆ, KTÓRA ZAWSZE TRWA."
            ]
        }
    ]
}
{
    "id": 664,
    "title": "ZATRZYMAJ SIĘ NA CHWILĘ (SZUMIĄ ŁANY ZBOŻA)",
    "verses": [
        {
            "lines": [
                "SZUMIĄ ŁANY ZBOŻA,",
                "GRA WIATR NA JEZIORZE.",
                "ŚPIEWA PTAK RADOŚNIE",
                "BOGU, CO GO STWORZYŁ."
            ]
        },
        {
            "lines": [
                "ZATRZYMAJ SIĘ NA CHWILĘ,",
                "ODETCHNIJ PIĘKNEM ŚWIATA,",
                "ZATRZYMAJ SIĘ NA CHWILĘ,",
                "ZAUWAŻ SWEGO BRATA,",
                "ZATRZYMAJ SIĘ NA CHWILĘ,",
                "NAD TYM, CO W SERCU KRYJESZ.",
                "ZATRZYMAJ SIĘ NA CHW ILĘ,",
                "I POMYŚL, PO CO ŻYJESZ?"
            ]
        },
        {
            "lines": [
                "PĘDZI CAŁE MIASTO,",
                "ZGRZYTAJĄ TRAMWAJE,",
                "WSZYSTKO CHCESZ UCHWYCIĆ",
                "A PUSTKA ZOSTAJE."
            ]
        },
        {
            "lines": [
                "NIKT DZIŚ NIE MA CZASU,",
                "KAŻDY GONI SZCZĘŚCIE.",
                "NA PÓŹNIEJ ZOSTAWIA,",
                "TO, CO NAJGORĘTSZE."
            ]
        },
        {
            "lines": [
                "JEDNĄ MAŁĄ CHWILĘ,",
                "ZAWSZE ZNALEŹĆ MOŻESZ",
                "ODEJŚĆ Z GWARU ŻYCIA",
                "SPOJRZEĆ W SERCE BOŻE."
            ]
        }
    ]
}
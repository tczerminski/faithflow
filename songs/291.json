{
    "id": 291,
    "title": "MY WIERZYMY (W CZASIE BÓLU)",
    "verses": [
        {
            "lines": [
                "W CZASIE BÓLU I ZWĄTPIENIA",
                "GDY SMUTEK WOKÓŁ MNIE,",
                "ON JEDYNYM JEST NIEZMIENNY",
                "W ŻYCIU MYM, W ŻYCIU MYM"
            ]
        },
        {
            "lines": [
                "W ŚWIECIE PEŁNYM ZAGUBIENIA",
                "W CIEMNOŚCI TY PROWADZISZ MNIE",
                "TYLKO W TOBIE JEST RATUNEK",
                "W ŻYCIU MYM, W ŻYCIU MYM"
            ]
        },
        {
            "lines": [
                "MY WIERZYMY W BOGA OJCA",
                "MY WIERZYMY W SYNA MOC",
                "MY WIERZYMY W JEGO DUCHA",
                "ŻE NOWE ŻYCIE DAJE NAM"
            ]
        },
        {
            "lines": [
                "MY WIERZYMY W ŚMIERĆ NA KRZYŻU",
                "MY WIERZYMY, ŻE ZWYCIĘŻYŁ ŚMIERĆ",
                "MY WIERZYMY W ZMARTWYCHWSTANIE",
                "I ŻE PAN POWRÓCI TU",
                "WRÓCI TU"
            ]
        },
        {
            "lines": [
                "DO CIEBIE CHCĘ SIĘ UPODOBNIĆ",
                "CHCĘ SERCEM PATRZEĆ TAK JAK TY",
                "W MYCH SŁABOŚCIACH I UPADKACH",
                "UFAM CI, UFAM CI"
            ]
        },
        {
            "lines": [
                "NIECH MIŁOŚCIĄ ŻYJE KAŻDY Z NAS",
                "BÓG NIEZMIENNY JEST, ON SIŁĘ MA",
                "WIEM ON NIGDY NIE ZAWIEDZIE MNIE",
                "UFAM MU, UFAM MU"
            ]
        },
        {
            "lines": [
                "BRAMY PIEKIEŁ NIE PRZEMOGŁY GO",
                "WIELKA BOŻA MOC ZNISZCZYŁA ZŁO",
                "WIEM ON NIGDY NIE ZAWIEDZIE MNIE",
                "UFAM MU, UFAM MU"
            ]
        }
    ]
}
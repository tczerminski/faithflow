{
    "id": 125,
    "title": "GDY CIĘ WEZWĘ (JAK DOBRE, JAK PIĘKNE)",
    "verses": [
        {
            "lines": [
                "JAK DOBRE, JAK PIĘKNE",
                "SĄ TWE MYŚLI PANIE O MNIE",
                "JAK WIELKA JEST ŁASKA",
                "KTÓRĄ OKAZAŁEŚ NAM",
                "MAJESTAT TWÓJ CHCĘ PRZED OCZAMI MIEĆ"
            ]
        },
        {
            "lines": [
                "GDY CIĘ WEZWĘ TO WIEM, ŻE ODPOWIESZ",
                "W MOIM SERCU ODNAJDĘ CIĘ",
                "RĘCE WZNIOSĘ PANIE Z DZIĘKCZYNIENIEM",
                "I W MOIM SERCU UWIELBIĘ CIĘ"
            ]
        },
        {
            "lines": [
                "NIEZMIENNA, ŁASKAWA",
                "JEST OJCOWSKA BOŻA MIŁOŚĆ",
                "TWE PIĘKNO I JASNOŚĆ",
                "W PIERSIACH DECH ZAPIERA NAM",
                "MAJESTAT TWÓJ ZOBACZYĆ CHCĘ",
                "WIĘC PRZEMIEŃ MNIE JUŻ DZIŚ",
                "W TWÓJ OBRAZ PRZEMIEŃ"
            ]
        },
        {
            "lines": [
                "OOOOOOOOOO",
                "(: CAŁYM SERCEM BĘDĘ WIELBIĆ CIĘ :)"
            ]
        }
    ]
}
{
    "id": 244,
    "title": "KIEDY ŚWIAT PATRZY NA MNIE",
    "verses": [
        {
            "lines": [
                "KIEDY ŚWIAT PATRZY NA MNIE",
                "WIDZĄC MÓJ ŻYCIA TRUD",
                "BARDZO MYLĄ SIĘ MÓWIĄC,",
                "ŻE JA NIE MAM NIC",
                "JA W MYM SERCU MAM RADOŚĆ",
                "CHCIAŁBYM BY ONI TEŻ",
                "DZIĘKI CI, ŻE BŁOGOSŁAWIĆ MI CHCESZ"
            ]
        },
        {
            "lines": [
                "OTO MAM DACH NAD GŁOWĄ,",
                "MAM GDZIE SPOKOJNIE SPAĆ",
                "NA MYM STOLE JEDZENIE",
                "UBRANIE TEŻ MAM",
                "DAŁEŚ PANIE SWĄ MIŁOŚĆ",
                "WOKÓŁ BLISKICH MYCH TEŻ",
                "DZIĘKI CI, ŻE BŁOGOSŁAWIĆ MI CHCESZ"
            ]
        },
        {
            "lines": [
                "ME UBRANIA – NIE NOWE",
                "BO NIE ZAWSZE MNIE STAĆ",
                "CHOĆ ZAMOŻNY NIE JESTEM",
                "LECZ CIEBIE PANIE MAM",
                "CHOĆ TEN ŚWIAT TAK NIE PATRZY",
                "MI WYSTARCZY, ŻE WIESZ",
                "DZIĘKI CI ŻE BŁOGOSŁAWIĆ MI CHCESZ"
            ]
        },
        {
            "lines": [
                "PRAGNĘ IŚĆ TWOIM ŚLADEM",
                "TWOICH SŁUCHAĆ CHCĘ SŁÓW",
                "NAWET GDY SIĘ ZAGUBIĘ",
                "TO SZUKAM CIĘ ZNÓW",
                "SERCE MĄDRE BYM POSIADŁ",
                "– Z TOBĄ CHCĘ LICZYĆ DNI",
                "DZIĘKI CI, ŻE BŁOGOSŁAWIĆ CHCESZ MI"
            ]
        },
        {
            "lines": [
                "GDY SIĘ SMUTEK POJAWI",
                "KOŚCIÓŁ WSPIERA MNIE TWÓJ",
                "TY MNIE BOŻE POCIESZASZ",
                "I KOISZ BÓL MÓJ",
                "WSZAK TY JESTEŚ OBECNY",
                "GDZIE OSOBY DWIE, TRZY",
                "DZIĘKI CI, ŻE BŁOGOSŁAWIĆ MI CHCESZ"
            ]
        }
    ]
}
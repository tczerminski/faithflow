{
    "id": 241,
    "title": "KIEDY NADSZEDŁ CZAS",
    "verses": [
        {
            "lines": [
                "KIEDY NADSZEDŁ CZAS",
                "TEN CUDOWNY CZAS",
                "GDY ZNALAZŁEM SIĘ NA TWOJEJ DRODZE",
                "TY PRZYSZEDŁEŚ TAK",
                "DAJĄC SERCU ZNAK",
                "AŻ ZROZUMIAŁEM ŻE JESTEŚ BOGIEM"
            ]
        },
        {
            "lines": [
                "UWIELBIAM CIĘ, WYWYŻSZAM CIĘ",
                "UWIELBIAM CIĘ, WYWYŻSZAM CIĘ"
            ]
        },
        {
            "lines": [
                "DUCHU ŚWIĘTY",
                "CUDOWNYM WIATREM JESTEŚ WKOŁO NAS",
                "– NIE ODCHODŹ"
            ]
        },
        {
            "lines": [
                "ODNOWIŁEŚ MNIE",
                "CZUJĘ WIOSNY ZEW",
                "W MOJEJ DUSZY JEST",
                "RADOŚĆ TWOJA",
                "WIĘCEJ CIEBIE CHCĘ",
                "BARDZIEJ Z DNIA NA DZIEŃ",
                "ROZKOSZUJĘ SI Ę TWYM POKOJEM"
            ]
        }
    ]
}
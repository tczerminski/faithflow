{
    "id": 360,
    "title": "OCZYŚĆ SERCE ME",
    "verses": [
        {
            "lines": [
                "OCZYŚĆ SERCE ME,",
                "CHCĘ JAK ZŁOTO LŚNIĆ",
                "I JAK CZYSTE SREBRO",
                "OCZYŚĆ SERCE ME",
                "CHCĘ CZYSTEGO ZŁOTA",
                "BLASKIEM LŚNIĆ"
            ]
        },
        {
            "lines": [
                "ZSTĄP OGNIU, ZSTĄP",
                "PRZYJDŹ OCZYŚĆ SERCE ME",
                "PRAGNĘ BYĆ ŚWIĘTY,",
                "TOBIE ODDANY PANIE",
                "CHCĘ ZAWSZE BYĆ ŚWIĘTY",
                "TOBIE MÓJ MISTRZU NA ZAWSZE ODDANY",
                "GOTÓW BY SŁUŻYĆ CI"
            ]
        },
        {
            "lines": [
                "OCZYŚĆ SERCE ME,",
                "OBMYJ SWOJĄ KRWIĄ",
                "SPRAW, BYM MÓGŁ BYĆ ŚWIĘTY.",
                "OCZYŚĆ SERCE ME,",
                "Z NAJTAJNIEJSZYCH GRZECHÓW",
                "OCZYŚĆ JE"
            ]
        }
    ]
}
{
    "id": 427,
    "title": "POMÓŻ ŻYWYM OGNIEM BYĆ",
    "verses": [
        {
            "lines": [
                "POMÓŻ ŻYWYM OGNIEM BYĆ",
                "DLA TWEJ CHWAŁY PŁONĄĆ CHCĘ",
                "ŻAREM TWEJ MIŁOŚCI DZIŚ",
                "ROZPAL, ROZPAL SERCE ME"
            ]
        },
        {
            "lines": [
                "OD MARNOŚCI ZIEMSKICH DRÓG",
                "BŁAGAM CIĘ UWOLNIJ MNIE",
                "TYLKO CIEBIE JEZU MÓJ",
                "NAŚLADOWAĆ DZISIAJ CHCĘ"
            ]
        },
        {
            "lines": [
                "PRECZ ZWĄTPIENIA, PRECZ ZMARTWIENIA,",
                "SŁABOŚĆ PRECZ",
                "JEZUS CHRYSTUS, JEZUS CHRYSTUS",
                "ZE MNĄ JEST"
            ]
        },
        {
            "lines": [
                "Z PIEŚNIĄ CHWAŁY IDĘ W PRZÓD",
                "I CHWALĘ GO, ON ZWYCIĘZCĄ",
                "I BOGIEM MOIM JEST"
            ]
        }
    ]
}